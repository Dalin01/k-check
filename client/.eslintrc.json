{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "amd": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "latest"
    }
  },
  "rules": {
    // "indent": ["error", 2],
    "keyword-spacing": "error",
    "linebreak-style": ["error", "unix"],
    "no-undef": 0,
    "no-unsued-vars": 0,
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "react/prop-types": 0,
    "react/display-name": 0,
    "semi": ["error", "always"],
    "space-before-blocks": "error"
    // "space-before-function-paren": "error"
  }
}
